<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../partials/head', {tittle: tittle} ); %>
        <link rel="stylesheet" href="/css/user/register-styles.css">
        <script src="/js/user/userFormLogValidation.js"></script>
    </head>
    <body>
        <header>
            <%- include('../partials/navigation'); %>
        </header>
        <div class="register">
            <div class="form-register">
                <h3 class="tittle-form">Logeate</h3>
                <section class="error">
                    <ul>
                    </ul>
                </section>
                <form action="/user/login" method="POST" id="formUserLog">
                    <div class="form-up">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" id="email" name="email" placeholder="muebles@deco.com" class="form-input"
                        value="<%= locals.oldData ? locals.oldData.email : null %>"   >
                        <% if (locals.errors && errors.email) { %>
                            <label class="text-danger"> <%= errors.email.msg %>  </label>
                        <% } %>
                    </div>
                    <div class="form-up">
                        <label for="pass" class="form-label">Contraseña</label>
                        <input type="password" id="pass" name="pass" placeholder="Contraseña" class="form-input"
                        pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" 
                        title="Debe contener al menos un número, una letra mayúscula, minúscula, y al menos 8 o más caracteres"   >
                        <% if (locals.errors && errors.pass) { %>
                            <label class="text-danger"> <%= errors.pass.msg %>  </label>
                        <% } %>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" value="1" name="checkRem" id="checkRem">
                        <label class="form-check-label" for="checkRem">
                          Recordarme
                        </label>
                    </div>
                    <div class="form-button">
                        <button type="submit" class="button-blue" >Conectarse
                            <i class="fas fa-user-plus"></i>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </body>
</html>