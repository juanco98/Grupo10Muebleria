<div class="form-product">
    <form action="/admin/products">
        <div class="form-up">
            <img src="/img/chair.svg" alt="" class="product-img">
        </div>
        <div class="form-up">
            <label for="productName">Nombre</label>
            <input type="text" name="productName" id="productName" placeholder="Nombre Producto" value=""
            required maxlength="60">
        </div>
        <div class="form-up">
            <label for="productDesc">Descripcion</label>
            <textarea name="productDesc" id="productDesc" cols="30" rows="10" class="form-desc" required></textarea>
        </div>
        <div class="form-up">
            <label for="productPrice">Precio</label>
            <input type="text" name="productPrice" id="productPrice" placeholder="9999" value=""
            pattern="[0-9]+" title="Solamente nÃºmeros" required>
        </div>
        <div class="form-up">
            <label for="productImg">Fotos</label>
            <input type="file" accept="image/*" name="productImg" id="productImg" multiple="multiple">
        </div>
        <div class="form-up">
            <button type="submit" class="button-blue mid">
                Guardar
            </button>
        </div>
    </form>
</div>