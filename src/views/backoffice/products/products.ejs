<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); %>
    <link rel="stylesheet" href="/css/backoffice/product/product-styles.css">
    <link rel="stylesheet" href="/css/backoffice/product/form-product-styles.css">
</head>
<body>
    <div class="main">
        <%- include('../partials/topbar', {tittle: tittle});  %> 
        <div class="mid-main">
            <%- include('../partials/leftbar');  %> 
            <div class="right-main">
                <%- include('../partials/rightoption');  %> 
                <div class="all-products">
                    <% for( let i = 0; i < products.length; i++ ) { %>
                        <article>
                            <div class="product-card">
                                <div class="product-buttom-delet">
                                    <form action="/admin/products/deleteProduct/<%= products[i].id %>?_method=DELETE" method="post">
                                        <button type="submit" class="delete"></button>
                                        <i class="fa-solid fa-xmark redbtn delete"></i>
                                    </form>
                                    <!-- <a href="/admin/products/deleteProduct/<%= products[i].id %>?_method=DELETE" class="delete">
                                    </a> -->
                                </div>
                                <div class="product-logo">
                                    <a href="">
                                        <img src="/img/chair.svg" alt="" class="product-img-card">
                                    </a>
                                </div>
                                <div class="product-desc">
                                    <div class="product-tittle">
                                        <%= products[i].name %> 
                                    </div>
                                    <div class="product-description">
                                        <%= products[i].description %> 
                                    </div>
                                    <div class="product-bottom">
                                        <div class="product-price">
                                            $<%= products[i].price %> 
                                        </div>
                                        <div class="product-buttom">
                                            <a href="/admin/products/editProduct/<%= products[i].id %>">
                                                <button class="button-blue-sm">Modificar</button>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </article>
                    <% } %>
                </div>
            </div>
        </div>
        <%- include('../partials/footer');  %> 
    </div>
</body>
</html>